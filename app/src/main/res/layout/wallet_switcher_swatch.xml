<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView android:id="@+id/wallet_switcher_swatch_icon"
            android:layout_width="@dimen/xlarge_icon"
            android:layout_height="@dimen/xlarge_icon"
            android:layout_marginRight="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:src="@drawable/abc_vector_test"/>
        <TextView
            android:id="@+id/wallet_switcher_swatch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text"
            android:text="category"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_gravity="center"
            android:textColor="@color/gray"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/wallet_switcher_swatch_edit"
            android:layout_width="@dimen/large_icon"
            android:layout_height="@dimen/large_icon"
            android:text="e"
            android:textColor="@color/white"
            android:background="@color/green"
            android:layout_marginTop="@dimen/margin_5"/>

        <Button
            android:id="@+id/wallet_switcher_swatch_delete"
            android:layout_width="@dimen/large_icon"
            android:layout_height="@dimen/large_icon"
            android:text="-"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_marginTop="@dimen/margin_5"/>
    </LinearLayout>

</merge>